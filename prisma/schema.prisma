generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  DRAFT
  ACTIVE
}

model Product {
  id          String   @id @default(cuid())
  categoryId  String
  slug        String   @unique
  name        String
  description String
  status      Status?   @default(DRAFT)
  price       Int
  stock       Int?     @default(0)
  image       String?
  color       String?
  size        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}
